<UserControl x:Class="BACTBiometricClient.Views.RegistrationTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Enhanced Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#90A4AE" BlurRadius="20" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Foreground" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Action Button -->
        <Style x:Key="SuccessButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#2E7D32" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Foreground" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enhanced Input Field -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#263238"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#42A5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Alert Styles -->
        <Style x:Key="InfoAlert" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <Style x:Key="SuccessAlert" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <Style x:Key="WarningAlert" TargetType="Border">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,16"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32,24">

            <!-- Enhanced Info Banner -->
            <Border Style="{StaticResource InfoAlert}" Margin="0,0,0,28">
                <StackPanel Orientation="Horizontal">
                    <Border Background="#1565C0" 
                            CornerRadius="20" 
                            Width="40" 
                            Height="40"
                            Margin="0,0,16,0">
                        <TextBlock Text="💡" FontSize="18" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Quality Threshold Information" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#0D47A1"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Higher values require better fingerprint quality. Multiple capture attempts may be needed for optimal results."
                                   FontSize="13"
                                   Foreground="#1565C0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Step 1: Search Student -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <!-- Section Header -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="#E3F2FD" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,16,0">
                            <TextBlock Text="1" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#1565C0"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Search Student" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="#263238"/>
                            <TextBlock Text="Enter 5-digit roll number to find student" 
                                       FontSize="13" 
                                       Foreground="#607D8B"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Search Input -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Roll Number" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#37474F" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="txtSearch" 
                                     Style="{StaticResource ModernTextBox}"
                                     MaxLength="5"
                                     Height="48"
                                     FontSize="16"
                                     ToolTip="Enter 5-digit roll number"
                                     KeyDown="TxtSearch_KeyDown"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                            <Button x:Name="btnSearch"
                                    Content="🔍 Search Student"
                                    Style="{StaticResource PrimaryButton}"
                                    Height="48"
                                    MinWidth="180"
                                    FontSize="15"
                                    Click="BtnSearch_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Success Feedback -->
                    <Border x:Name="panelSearchSuccess"
                            Style="{StaticResource SuccessAlert}"
                            Margin="0,16,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Student Found Successfully"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#2E7D32"/>
                                <TextBlock Text="Student information loaded and ready for fingerprint registration"
                                           FontSize="12"
                                           Foreground="#388E3C"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Student Information Section -->
            <Border x:Name="panelStudentInfo" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="👤" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Student Information" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#263238"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Content Grid -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Student Photo -->
                        <Border Grid.Column="0"
                                Background="#F5F5F5"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Width="180"
                                Height="220"
                                Margin="0,0,30,0"
                                VerticalAlignment="Top">
                            <Grid>
                                <Image x:Name="imgStudent" 
                                       Stretch="UniformToFill"/>
                                <Border Background="#F5F5F5"
                                        x:Name="panelNoPhoto">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="👤" 
                                                   FontSize="48" 
                                                   Foreground="#BDBDBD"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="No Photo" 
                                                   FontSize="12" 
                                                   Foreground="#9E9E9E"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Student Details -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,16">
                                <TextBlock Text="Name" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtName" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#263238"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Father Name -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="Father Name" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtFatherName" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#263238"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Roll Number -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,16">
                                <TextBlock Text="Roll Number" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtRollNumber" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#7C4DFF"/>
                            </StackPanel>

                            <!-- CNIC -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="CNIC" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtCNIC" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"/>
                            </StackPanel>

                            <!-- Gender -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,16">
                                <TextBlock Text="Gender" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtGender" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"/>
                            </StackPanel>

                            <!-- Test -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="Test" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtTest" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"/>
                            </StackPanel>

                            <!-- Venue -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Venue" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtVenue" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"/>
                            </StackPanel>

                            <!-- Seating -->
                            <StackPanel Grid.Row="3" Grid.Column="1">
                                <TextBlock Text="Seating" FontSize="12" Foreground="#757575" Margin="0,0,0,6"/>
                                <TextBlock x:Name="txtSeating" 
                                           Text="-" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Fingerprint Status Warning/Success -->
            <Border x:Name="panelFingerprintWarning"
                    Background="#FFF3E0"
                    BorderBrush="#FFB300"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20,16"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="Fingerprint Not Registered"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#E65100"/>
                        <TextBlock Text="Please capture and register student's fingerprint below."
                                   FontSize="13"
                                   Foreground="#EF6C00"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Fingerprint Already Registered Success -->
            <Border x:Name="panelFingerprintSuccess"
                    Background="#E8F5E9"
                    BorderBrush="#66BB6A"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="20,16"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center" Foreground="#2E7D32"/>
                    <StackPanel>
                        <TextBlock Text="Fingerprint Already Registered"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtFingerprintDate"
                                   Text="Registered on: [Date]"
                                   FontSize="13"
                                   Foreground="#388E3C"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Fingerprint Capture Section -->
            <Border x:Name="panelFingerprintCapture" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Fingerprint Preview -->
                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="👆" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Fingerprint Capture" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#263238"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Border Background="#FAFAFA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                CornerRadius="8"
                                Width="280"
                                Height="360"
                                Padding="20">
                            <Grid>
                                <Image x:Name="imgFingerprint" Stretch="Uniform"/>
                                <TextBlock x:Name="txtNoFingerprint"
                                           Text="No fingerprint&#x0a;captured yet"
                                           FontSize="14"
                                           Foreground="#9E9E9E"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </Border>

                        <TextBlock x:Name="txtQualityScore"
                                   Text=""
                                   FontSize="13"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Right: Scanner Status & Actions -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Scanner Status -->
                        <Border Background="#E3F2FD"
                                BorderBrush="#42A5F5"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="20,16"
                                Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Ellipse x:Name="scannerIndicator"
                                         Width="14"
                                         Height="14"
                                         Fill="#42A5F5"
                                         Margin="0,0,12,0"
                                         VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Scanner Status"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#0D47A1"/>
                                    <TextBlock x:Name="txtScannerStatus"
                                               Text="Simulation Mode"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#1976D2"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quality Threshold -->
                        <Grid Margin="0,0,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Quality Threshold"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#546E7A"
                                           Margin="0,0,0,6"/>
                                <Slider x:Name="sliderQuality"
                                        Minimum="40"
                                        Maximum="80"
                                        Value="60"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        ValueChanged="SliderQuality_ValueChanged"
                                        Height="24"/>
                            </StackPanel>
                            <Border Grid.Column="1"
                                    Background="#E3F2FD"
                                    BorderBrush="#42A5F5"
                                    BorderThickness="2"
                                    CornerRadius="6"
                                    Padding="16,10"
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="txtQualityValue"
                                           Text="60"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#0D47A1"/>
                            </Border>
                        </Grid>

                        <!-- Action Buttons -->
                        <StackPanel>
                            <Button x:Name="btnCapture"
                                    Content="📸 Capture Fingerprint"
                                    Style="{StaticResource PrimaryButton}"
                                    Height="48"
                                    FontSize="15"
                                    Margin="0,0,0,12"
                                    IsEnabled="False"
                                    Click="BtnCapture_Click"/>

                            <Button x:Name="btnSave"
                                    Content="💾 Save Registration"
                                    Style="{StaticResource SuccessButton}"
                                    Height="48"
                                    FontSize="15"
                                    IsEnabled="False"
                                    Click="BtnSave_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>