<UserControl x:Class="BACTBiometricClient.Views.VerificationTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Enhanced Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="28"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#90A4AE" BlurRadius="20" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#263238"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Enhanced Image Card Style -->
        <Style x:Key="ImageCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#2E7D32" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Foreground" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Verify Action Button -->
        <Style x:Key="VerifyButton" TargetType="Button">
            <Setter Property="Background" Value="#1565C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#1565C0" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Foreground" Value="#757575"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enhanced Input Field -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#263238"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#42A5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Alert Styles -->
        <Style x:Key="SuccessAlert" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>

        <Style x:Key="InfoAlert" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20,16"/>
        </Style>

        <Style x:Key="WarningAlert" TargetType="Border">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32,24">

            <!-- Step 1: Load Student -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <!-- Section Header -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" 
                                Background="#E3F2FD" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,16,0">
                            <TextBlock Text="1" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="#1565C0"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Load Student for Verification" Style="{StaticResource SectionHeader}" Margin="0"/>
                            <TextBlock Text="Enter student roll number to load verification data" 
                                       FontSize="13" 
                                       Foreground="#607D8B"/>
                        </StackPanel>
                    </Grid>

                    <!-- College Filter (for College Admins) -->
                    <StackPanel x:Name="panelCollegeFilter" Visibility="Collapsed" Margin="0,0,0,20">
                        <Border Background="#E8F5E9" 
                                BorderBrush="#4CAF50"
                                BorderThickness="2"
                                CornerRadius="8"
                                Padding="16,12">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏫" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <StackPanel>
                                    <TextBlock Text="College Access Restriction"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"/>
                                    <TextBlock x:Name="txtCollegeRestriction"
                                               Text="You can only verify students from your assigned college"
                                               FontSize="12"
                                               Foreground="#388E3C"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Enhanced Search Input -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="Search Student" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#37474F" 
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="txtSearch" 
                                     Style="{StaticResource ModernTextBox}"
                                     Height="48"
                                     FontSize="16"
                                     ToolTip="Search by roll number, name, father name, or CNIC"
                                     KeyDown="TxtSearch_KeyDown"
                                     TextChanged="TxtSearch_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,8,0">
                            <Button x:Name="btnLoadStudent"
                                    Content="🔍 Search"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnSearch_Click"
                                    Height="48"
                                    MinWidth="120"
                                    FontSize="15"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                            <Button x:Name="btnClearSearch"
                                    Content="Clear"
                                    Background="#757575"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    Height="48"
                                    MinWidth="80"
                                    Click="BtnClearSearch_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="16,14">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#616161"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Search Results Summary -->
                    <StackPanel x:Name="panelSearchSummary" Orientation="Horizontal" Margin="0,16,0,8" Visibility="Collapsed">
                        <TextBlock x:Name="txtSearchSummary" FontSize="13" FontWeight="SemiBold" Foreground="#2E7D32"/>
                        <TextBlock x:Name="txtSearchTime" FontSize="12" Foreground="#757575" Margin="8,0,0,0"/>
                    </StackPanel>

                    <!-- Enhanced Search Results -->
                    <Border x:Name="panelSearchResults" 
                            Background="#FAFAFA" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Margin="0,0,0,16"
                            MaxHeight="300"
                            Visibility="Collapsed">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                            <ListBox x:Name="lstSearchResults" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     SelectionChanged="LstSearchResults_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" 
                                                Margin="4" 
                                                Padding="12" 
                                                CornerRadius="6"
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                            <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="50"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Student Photo Thumbnail -->
                                                <Border Grid.Column="0" 
                                                        Width="40" 
                                                        Height="40" 
                                                        CornerRadius="4"
                                                        BorderBrush="#BDBDBD" 
                                                        BorderThickness="1"
                                                        Background="#F5F5F5">
                                                    <TextBlock Text="👤" 
                                                               FontSize="20" 
                                                               Foreground="#BDBDBD"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Student Information -->
                                                <StackPanel Grid.Column="1" 
                                                            Margin="12,0,0,0" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Student.RollNumber}" 
                                                               FontWeight="Bold" 
                                                               FontSize="14" 
                                                               Foreground="#2E7D32"/>
                                                    <TextBlock Text="{Binding Student.Name}" 
                                                               FontSize="13" 
                                                               Foreground="#333333"
                                                               Margin="0,2,0,0"/>
                                                    <TextBlock Text="{Binding Student.FatherName}" 
                                                               FontSize="12" 
                                                               Foreground="#666666"
                                                               Margin="0,1,0,0"/>
                                                    <TextBlock Text="{Binding Student.CollegeName}" 
                                                               FontSize="11" 
                                                               Foreground="#999999"
                                                               Margin="0,1,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Verification Status -->
                                                <StackPanel Grid.Column="2" 
                                                            VerticalAlignment="Center" 
                                                            HorizontalAlignment="Right">
                                                    <Border CornerRadius="12" 
                                                            Padding="8,4" 
                                                            Background="{Binding StatusColor}">
                                                        <TextBlock Text="{Binding FingerprintStatus}" 
                                                                   FontSize="10" 
                                                                   FontWeight="Bold" 
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding VerificationHistory}" 
                                                               FontSize="9" 
                                                               Foreground="#757575"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                    </Border>

                    <!-- Success Feedback -->
                    <Border x:Name="panelLoadSuccess"
                            Style="{StaticResource SuccessAlert}"
                            Margin="0,16,0,0"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock x:Name="txtLoadSuccess"
                                           Text="Student Loaded Successfully"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#2E7D32"/>
                                <TextBlock Text="Student data and biometric information ready for verification"
                                           FontSize="12"
                                           Foreground="#388E3C"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Student Verification Details Section -->
            <Border x:Name="panelStudentDetails" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="👤" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Student Verification Details" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </StackPanel>

                    <!-- Content - 4 Equal Columns -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Registration Photo -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Registration Photo" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center"/>
                            <Border Style="{StaticResource ImageCardStyle}" 
                                    Height="250"
                                    MouseLeftButtonDown="ImgRegistrationPhoto_Click"
                                    Cursor="Hand">
                                <Grid>
                                    <Image x:Name="imgRegistrationPhoto" Stretch="Uniform"/>
                                    <TextBlock Text="No Photo" 
                                               FontSize="12" 
                                               Foreground="#999"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               x:Name="txtNoPhoto"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="Click to zoom" 
                                       FontSize="11" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Test Photo -->
                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="Test Photo" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center"/>
                            <Border Style="{StaticResource ImageCardStyle}" 
                                    Height="250"
                                    MouseLeftButtonDown="ImgTestPhoto_Click"
                                    Cursor="Hand">
                                <Grid>
                                    <Image x:Name="imgTestPhoto" Stretch="Uniform"/>
                                    <TextBlock x:Name="txtNoTestPhoto"
                                               Text="Not captured" 
                                               FontSize="12" 
                                               Foreground="#999"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="Click to zoom" 
                                       FontSize="11" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtTestPhotoStatus"
                                       Text="✗ Not captured" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="#D32F2F"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Saved Fingerprint -->
                        <StackPanel Grid.Column="2" Margin="10,0">
                            <TextBlock Text="Saved Fingerprint" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center"/>
                            <Border Style="{StaticResource ImageCardStyle}" 
                                    Height="250"
                                    MouseLeftButtonDown="ImgSavedFingerprint_Click"
                                    Cursor="Hand">
                                <Grid>
                                    <Image x:Name="imgSavedFingerprint" Stretch="Uniform"/>
                                    <TextBlock x:Name="txtNoFingerprint"
                                               Text="Not registered" 
                                               FontSize="12" 
                                               Foreground="#999"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <TextBlock Text="Click to zoom" 
                                       FontSize="11" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtFingerprintStatus"
                                       Text="✗ Not registered" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="#D32F2F"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Student Details - INCREASED HEIGHT -->
                        <StackPanel Grid.Column="3" Margin="10,0,0,0">
                            <TextBlock Text="Student Details" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center"/>
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="2"
                                    CornerRadius="8" 
                                    Padding="20"
                                    Height="250">
                                <StackPanel>
                                    <!-- Name -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name" 
                                                   FontSize="11" 
                                                   Foreground="#666" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtStudentName" 
                                                   Text="-" 
                                                   FontSize="14" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1976D2"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Father Name -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Father Name" 
                                                   FontSize="11" 
                                                   Foreground="#666" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtFatherName" 
                                                   Text="-" 
                                                   FontSize="13" 
                                                   Foreground="#333"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Roll Number -->
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Roll Number" 
                                                   FontSize="11" 
                                                   Foreground="#666" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtRollNumber" 
                                                   Text="-" 
                                                   FontSize="13" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1976D2"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- CNIC - FIXED -->
                                    <StackPanel>
                                        <TextBlock Text="CNIC" 
                                                   FontSize="11" 
                                                   Foreground="#666" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtCNIC" 
                                                   Text="-" 
                                                   FontSize="13" 
                                                   Foreground="#333"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <TextBlock Text="Student Information" 
                                       FontSize="11" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Live Verification Section -->
            <Border x:Name="panelLiveVerification" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="🔐" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Live Verification" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </StackPanel>

                    <Border Background="#F5F5F5" 
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="📋 Verification Steps:" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="1. Ask student to place finger on scanner" FontSize="13" Foreground="#333" Margin="0,0,0,5"/>
                            <TextBlock Text="2. Click &quot;Verify Fingerprint&quot; button" FontSize="13" Foreground="#333" Margin="0,0,0,5"/>
                            <TextBlock Text="3. Wait for match result" FontSize="13" Foreground="#333"/>
                        </StackPanel>
                    </Border>

                    <!-- Captured Fingerprint Preview -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fingerprint Image -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Live Capture" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="#666"
                                       Margin="0,0,0,10"
                                       HorizontalAlignment="Center"/>
                            <Border BorderBrush="#1976D2" 
                                    BorderThickness="3"
                                    CornerRadius="8"
                                    Background="White"
                                    Width="250"
                                    Height="300"
                                    MouseLeftButtonDown="ImgLiveCapture_Click"
                                    Cursor="Hand">
                                <Border.Clip>
                                    <RectangleGeometry Rect="0,0,250,300" RadiusX="8" RadiusY="8"/>
                                </Border.Clip>
                                <Grid>
                                    <Image x:Name="imgLiveCapture" Stretch="Uniform"/>
                                    <TextBlock x:Name="txtNoLiveCapture"
                                               Text="No fingerprint&#x0a;captured yet" 
                                               FontSize="13" 
                                               Foreground="#999"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Match Result -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="40,0,0,0">
                            <!-- Match Result Display -->
                            <Border x:Name="panelMatchResult"
                                    Background="#E8F5E9"
                                    BorderBrush="#66BB6A"
                                    BorderThickness="3"
                                    CornerRadius="8"
                                    Padding="25"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock x:Name="txtMatchResult" 
                                               Text="✓ MATCH CONFIRMED" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#2E7D32"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,15"/>
                                    <TextBlock x:Name="txtMatchScore" 
                                               Text="Match Score: 95" 
                                               FontSize="18" 
                                               FontWeight="SemiBold" 
                                               Foreground="#388E3C"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Scanner Status -->
                            <Border Background="#FFF3E0"
                                    BorderBrush="#FF9800"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse x:Name="scannerIndicator" 
                                             Width="12" 
                                             Height="12" 
                                             Fill="#FF9800" 
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Center"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Scanner Status" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#E65100"/>
                                        <TextBlock x:Name="txtScannerStatus" 
                                                   Text="Simulation Mode" 
                                                   FontSize="13" 
                                                   FontWeight="Bold"
                                                   Foreground="#F57C00"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Match Threshold -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Match Threshold (Score)" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="#666"
                                               Margin="0,0,0,5"/>
                                    <Slider x:Name="sliderMatchThreshold" 
                                            Minimum="60" 
                                            Maximum="120" 
                                            Value="80" 
                                            TickFrequency="5" 
                                            IsSnapToTickEnabled="True" 
                                            ValueChanged="SliderMatchThreshold_ValueChanged"
                                            Height="24"/>
                                </StackPanel>
                                <Border Grid.Column="1" 
                                        Background="#E3F2FD" 
                                        BorderBrush="#42A5F5"
                                        BorderThickness="2"
                                        CornerRadius="6" 
                                        Padding="15,10" 
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="txtMatchThresholdValue" 
                                               Text="80" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#0D47A1"/>
                                </Border>
                            </Grid>

                            <!-- Action Buttons -->
                            <StackPanel>
                                <Button x:Name="btnVerify"
                                        Content="🔐 Verify Fingerprint"
                                        Style="{StaticResource VerifyButton}"
                                        Height="48"
                                        FontSize="15"
                                        Margin="0,0,0,10"
                                        Click="BtnVerify_Click"/>

                                <Button x:Name="btnSaveLog"
                                        Content="💾 Save Verification Log"
                                        Style="{StaticResource PrimaryButton}"
                                        Height="48"
                                        FontSize="15"
                                        IsEnabled="False"
                                        Click="BtnSaveLog_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>