<Window x:Class="BACTBiometricClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BACT Biometric Client"
        Height="750" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#B0BEC5" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>

        <!-- Tab Style -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Margin="0,0,4,0"
                                CornerRadius="8,8,0,0"
                                Padding="20,12">
                            <ContentPresenter x:Name="ContentSite" 
                                              ContentSource="Header" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#0D47A1"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#607D8B"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#BBDEFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header Bar with Gradient -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#0D47A1" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="25,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & Brand -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="10" 
                            Margin="0,0,15,0">
                        <TextBlock Text="🔐" 
                                   FontSize="24"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="BACT BIOMETRIC" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Admission Portal System" 
                                   FontSize="11" 
                                   Foreground="#BBDEFB"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Profile Card -->
                <Border Grid.Column="1" 
                        Background="#1565C0" 
                        CornerRadius="8" 
                        Padding="15,8"
                        HorizontalAlignment="Center"
                        Margin="30,0">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#0D47A1" 
                                CornerRadius="20" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,12,0">
                            <TextBlock Text="👤" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="txtUserName" 
                                       Text="User Name" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <Border Background="#0D47A1" 
                                    CornerRadius="10" 
                                    Padding="8,2"
                                    HorizontalAlignment="Left"
                                    Margin="0,3,0,0">
                                <TextBlock x:Name="txtUserRole" 
                                           Text="OPERATOR" 
                                           FontSize="10" 
                                           FontWeight="Bold"
                                           Foreground="#42A5F5"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Status & Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <!-- Connection Status -->
                    <Border Background="#1565C0" 
                            CornerRadius="8" 
                            Padding="12,8" 
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="statusIndicator" 
                                     Width="12" 
                                     Height="12" 
                                     Fill="#4CAF50" 
                                     Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtConnectionStatus" 
                                       Text="ONLINE" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Sync Status -->
                    <Border Background="#1565C0" 
                            CornerRadius="8" 
                            Padding="12,8" 
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" 
                                       FontSize="14" 
                                       Margin="0,0,6,0"/>
                            <TextBlock x:Name="txtPendingCount" 
                                       Text="0 PENDING" 
                                       FontSize="12" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- API Test Button -->
                    <Button x:Name="btnApiTest"
                            Style="{StaticResource IconButton}"
                            Background="#FF9800"
                            Margin="0,0,8,0"
                            ToolTip="API Test Console"
                            Click="BtnApiTest_Click">
                        <TextBlock Text="🧪" FontSize="16"/>
                    </Button>

                    <!-- Settings Button -->
                    <Button Style="{StaticResource IconButton}"
                            Background="#1565C0"
                            Margin="0,0,8,0"
                            ToolTip="Settings">
                        <TextBlock Text="⚙️" FontSize="16"/>
                    </Button>

                    <!-- Logout Button -->
                    <Button x:Name="btnLogout" 
                            Background="#F44336" 
                            Foreground="White"
                            FontSize="12" 
                            FontWeight="Bold"
                            Padding="15,8" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnLogout_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8" 
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🚪" FontSize="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="LOGOUT" FontSize="12" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <TabControl x:Name="mainTabControl"
                        BorderThickness="0"
                        Background="Transparent">
                <TabControl.Resources>
                    <Style TargetType="TabControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabControl">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Tab Headers -->
                                        <Border Grid.Row="0" 
                                                Background="Transparent" 
                                                Padding="0,0,0,0">
                                            <TabPanel IsItemsHost="True" 
                                                      Background="Transparent"/>
                                        </Border>

                                        <!-- Tab Content -->
                                        <Border Grid.Row="1" 
                                                Background="White"
                                                CornerRadius="0,8,8,8"
                                                Margin="0,0,0,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#B0BEC5" BlurRadius="20" ShadowDepth="2" Opacity="0.2"/>
                                            </Border.Effect>
                                            <ContentPresenter ContentSource="SelectedContent" 
                                                              Margin="30"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Registration Tab -->
                <TabItem x:Name="tabRegistration" FontSize="14">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="FINGERPRINT REGISTRATION" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <!-- RegistrationTab UserControl will be added in code-behind -->
                </TabItem>

                <!-- Verification Tab -->
                <TabItem x:Name="tabVerification" FontSize="14">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="BIOMETRIC VERIFICATION" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="✅" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Foreground="#4CAF50"
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="Verification Module" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="#0D47A1"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Verify student identity using fingerprint matching on test day" 
                                       FontSize="14" 
                                       Foreground="#607D8B"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <Border Background="#E8F5E9" 
                                    CornerRadius="8" 
                                    Padding="20,15"
                                    Margin="0,30,0,0">
                                <TextBlock Text="🚧 Coming Soon - Under Development" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#4CAF50"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Settings Tab -->
                <TabItem FontSize="14">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="SETTINGS" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="⚙️" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center"
                                       Foreground="#607D8B"
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="Application Settings" 
                                       FontSize="28" 
                                       FontWeight="Bold"
                                       Foreground="#0D47A1"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Configure API endpoints, scanner settings, and sync preferences" 
                                       FontSize="14" 
                                       Foreground="#607D8B"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <Border Background="#ECEFF1" 
                                    CornerRadius="8" 
                                    Padding="20,15"
                                    Margin="0,30,0,0">
                                <TextBlock Text="🚧 Coming Soon - Under Development" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#607D8B"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Modern Status Bar -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Border.Effect>
                <DropShadowEffect Color="#90A4AE" BlurRadius="10" ShadowDepth="0" Opacity="0.1" Direction="270"/>
            </Border.Effect>
            <Grid Margin="25,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtStatusMessage" 
                               Text="System Ready • All Services Running" 
                               FontSize="12" 
                               FontWeight="Medium"
                               Foreground="#263238"/>
                </StackPanel>

                <!-- Right Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#F5F7FA" 
                            CornerRadius="6" 
                            Padding="10,5"
                            Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🕐" FontSize="11" Margin="0,0,5,0"/>
                            <TextBlock Text="Last Sync: " 
                                       FontSize="11" 
                                       Foreground="#607D8B"/>
                            <TextBlock x:Name="txtLastSync" 
                                       Text="Never" 
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Foreground="#0D47A1"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#E8F5E9" 
                            CornerRadius="6" 
                            Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💾" FontSize="11" Margin="0,0,5,0"/>
                            <TextBlock Text="Database: " 
                                       FontSize="11" 
                                       Foreground="#607D8B"/>
                            <TextBlock x:Name="txtDatabaseStatus" 
                                       Text="Connected" 
                                       FontSize="11" 
                                       FontWeight="SemiBold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
