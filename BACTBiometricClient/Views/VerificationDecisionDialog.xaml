<Window x:Class="BACTBiometricClient.Views.VerificationDecisionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verification Decision" 
        Width="600" 
        Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#90A4AE" BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="AcceptButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RejectButton" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Verification Decision Required" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#1976D2"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="txtStudentInfo" 
                           Text="Student: [Name] | Roll: [Number]" 
                           FontSize="14" 
                           Foreground="#666"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Verification Results -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Verification Results" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#333"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Match Confidence:" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtMatchScore" Text="85%" FontSize="18" FontWeight="Bold" Foreground="#1976D2"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="System Recommendation:" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtRecommendation" Text="ACCEPT - Good match" FontSize="14" FontWeight="Bold" Foreground="#2E7D32"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Decision Options -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Your Decision" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#333"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                    x:Name="btnAccept"
                                    Content="ACCEPT Student"
                                    Style="{StaticResource AcceptButton}"
                                    Margin="0,0,8,0"
                                    Click="BtnAccept_Click"/>
                            
                            <Button Grid.Column="1" 
                                    x:Name="btnReject"
                                    Content="REJECT Student"
                                    Style="{StaticResource RejectButton}"
                                    Margin="8,0,0,0"
                                    Click="BtnReject_Click"/>
                        </Grid>
                        
                        <TextBlock Text="Note: Your decision will override the system recommendation if different." 
                                   FontSize="11" 
                                   Foreground="#999"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Manual Override Section -->
                <Border x:Name="panelManualOverride" Style="{StaticResource CardStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Manual Override Required" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#FF9800"
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock x:Name="txtOverrideMessage" 
                                   Text="You are overriding the system recommendation. Please provide justification:"
                                   FontSize="13" 
                                   Foreground="#666"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Reason for Override:" FontSize="12" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtOverrideReason" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="2"
                                 Margin="0,0,0,10"
                                 TextChanged="TxtOverrideReason_TextChanged"/>
                        
                        <TextBlock Text="Additional Notes (Optional):" FontSize="12" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNotes" 
                                 Height="60" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="8"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="2"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="txtValidationMessage" 
                           Grid.Column="0"
                           Text=""
                           FontSize="12" 
                           Foreground="#D32F2F"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" 
                        x:Name="btnConfirm"
                        Content="Confirm &amp; Save"
                        Style="{StaticResource AcceptButton}"
                        Margin="0,0,10,0"
                        MinWidth="140"
                        IsEnabled="False"
                        Click="BtnConfirm_Click"/>
                
                <Button Grid.Column="2" 
                        x:Name="btnCancel"
                        Content="Cancel"
                        Style="{StaticResource CancelButton}"
                        MinWidth="100"
                        Click="BtnCancel_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>